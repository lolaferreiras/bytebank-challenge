{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
        "paths": {
      // Atalhos das Libs (Corretos)
      "@bytebank-challenge/application": ["application/src/index.ts"],
      "@bytebank-challenge/domain": ["domain/src/index.ts"],
      "@bytebank-challenge/infrastructure": ["infrastructure/src/index.ts"],
      "resume-account-mf/Routes": [
        "apps/resume-account-mf/src/app/remote-entry/entry.routes"
      ],

      // Feature Modules Aliases
      "@transactions/*": [
        "apps/host-app/src/app/features/transactions/*"
      ],
      "@dashboard/*": [
        "apps/host-app/src/app/features/dashboard/*"
      ],
      "@auth/*": [
        "apps/host-app/src/app/features/auth/*"
      ],

      // Atalhos do Host-App (Movidos e Corrigidos)
      "@core/*": [
        "apps/host-app/src/app/core/*"
      ],
      "@environments/*": [
        "apps/host-app/src/environments/*"
      ],
      "@images/*": [
        "apps/host-app/src/assets/images/*"
      ],
      "@icons/*": [
        "apps/host-app/src/assets/icons/*"
      ],
      "@styles/*": [
        "apps/host-app/src/assets/styles/*"
      ],
      "@models/*": [
        "apps/host-app/src/app/shared/models/*"
      ],
      "@pages/*": [
        "apps/host-app/src/app/pages/*"
      ],
      "@components/*": [
        "apps/host-app/src/app/components/*"
      ],
      "@services/*": [
        "apps/host-app/src/app/core/services/*"
      ],
      "@shared/*": [
        "apps/host-app/src/app/shared/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "**/*.spec.ts"]
}
